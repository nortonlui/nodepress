<script>
     tinymce.init({
        selector: "#article",
        language:  'pt_BR',
        plugins: [
           'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons' 
        ],
        init_instance_callback: () => {
           var articleHtml = document.querySelector('#content');
           tinymce.get("article").setContent(articleHtml.innerHTML);
        }
    })
</script>
<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<body>
    <div class="container">
        <h2>Artigos</h2>
        <hr>
        <a class="btn btn-success" href="/admin/articles/new">Nova artigo</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% articles.forEach((article)=>{ %>
                <tr>
                    <td><%= article.id %></td>
                    <td><%= article.title %></td>
                    <td><%= article.slug %></td>
                    <% if (article.category == null || article.category == undefined ) { %>
                        <td>
                            categoria inexistente
                        </td>
                    <% } else { %>
                        <td>
                            <%= article.category.title %>
                        </td>
                    <% } %>
                    <td>
                        <a class="btn btn-warning" href="/admin/articles/edit/<%= article.id %>">Editar</a>
                        <form id="form-delete" method="POST" action="/admin/articles/delete" onsubmit="confirmDelete(event, this)">
                            <input type="hidden" value="<%= article.id %>" name="id">
                            <button class="btn btn-danger" >Excluir</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
<%- include('../../partials/scripts.ejs') %>
<%- include('../../partials/footer.ejs') %>
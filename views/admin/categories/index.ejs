<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<body>
    <div class="container">
        <h2>Categorias</h2>
        <hr>
        <a class="btn btn-success" href="/admin/categories/new">Nova categoria</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>
                    <tr>
                        <td><%= category.id %></td>
                        <td><%= category.title %></td>
                        <td><%= category.slug %></td>
                        <td>
                            <a id="btn-edit" class="btn btn-warning" href="/admin/categories/edit/<%= category.id %>">Editar</a>
                            <form id="form-delete" method="POST" action="/admin/categories/delete" onsubmit="confirmDelete(event, this)">
                                <input type="hidden" value="<%= category.id %>" name="id">
                                <button class="btn btn-danger" >Excluir</button>
                            </form>
                            
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
<%- include('../../partials/scripts.ejs') %>
<%- include('../../partials/footer.ejs') %>